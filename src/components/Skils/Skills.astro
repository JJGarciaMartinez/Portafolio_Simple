---
import { skills } from "@cv";
import Gear from "@/icons/Gear.astro";

const [, ...skillsList] = skills;
---

<div class="skills-container">
  <section class="mb-10 flex flex-row justify-between">
    <div
      class="text-2xl md:text-3xl font-bold flex flex-row items-center gap-2"
    >
      <Gear />
      <p>Habilidades TÃ©cnicas</p>
    </div>
  </section>
  <section class="skills-slider" id="skills-slider">
    {
      skillsList.map((skill) => {
        const bgColor = skill?.color;
        return (
          <section class="skill-box">
            <div
              style={{
                backgroundColor: `rgba(${bgColor},0.3)`,
                borderColor: `rgb(${bgColor})`,
              }}
              class="border"
            >
              <figure>
                <img src={skill.logo} alt={skill.name} />
              </figure>
              <h1>{skill.name}</h1>
            </div>
          </section>
        );
      })
    }
  </section>
</div>

<style>
  .skills-container {
    @apply w-full mx-auto container lg:max-w-4xl md:max-w-2xl select-none pb-16 md:pb-36;
  }

  .skills-slider {
    @apply w-full flex flex-row flex-wrap;
    .skill-box {
      @apply p-2 w-fit;

      & div {
        @apply w-auto md:w-28 !flex !flex-row !items-center !gap-2 !justify-center py-[2px] px-2 rounded-full !bg-opacity-50;

        & figure {
          @apply w-4 h-4 md:w-5 md:h-5;

          & img {
            @apply w-full h-full object-contain;
          }
        }

        & h1 {
          @apply text-xs md:text-sm text-white;
        }
      }
    }
  }

  span {
    @apply text-sm flex flex-row items-center gap-2 cursor-pointer;
  }
</style>
